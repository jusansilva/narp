<%- include('../layout/header') -%>

<body class="g-sidenav-show bg-gray-200">
  <%- include('../layout/menu-left') -%>
  <main
    class="main-content position-relative max-height-vh-100 h-100 border-radius-lg"
  >
    <%- include('../layout/menu-top') -%>
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div
                class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3"
              >
                <div class="col">
                  <h6 class="text-white text-capitalize ps-3">
                    Lista de Alunos
                  </h6>
                </div>
                <div class="col">
                  <div
                    class="text-white text-center me-2 d-flex align-items-right justify-content-center"
                  >
                    <a href="/createClient">
                      <i class="material-icons opacity-10">person_add</i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th
                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                      >
                        Nome
                      </th>
                      <th
                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                      >
                        Modalidade
                      </th>
                      <th
                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                      >
                        Valor Mensaidade
                      </th>
                      <th
                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                      >
                        Data Vencimento
                      </th>
                      <th
                      class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                    >
                      Data Pagamento
                    </th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% alunos.forEach(function(al){ %>
                    <tr>
                      <td>
                        <div class="d-flex px-2 py-1">
                          <div>
                        
                          </div>
                          <div
                            class="d-flex flex-column justify-content-center"
                          >
                            <h6 class="mb-0 text-sm"><%= al.nome %></h6>
                            <p class="text-xs text-secondary mb-0">
                              <%= al.User?.email %>
                            </p>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">
                          <%= al.modalidade %>
                        </p>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold">
                          <%= al.mensalidade %>
                        </span>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold">
                          <%= al.vencimento %>
                        </span>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold">
                          <%= al.pagamento %>
                        </span>
                      </td>
                     
            
                      <td class="align-middle">
                        <a
                          href="/updateCliente/<%=al.id%>"
                          class="text-secondary font-weight-bold text-xs"
                          data-toggle="tooltip"
                          data-original-title="Edit user"
                        >
                          Edit
                        </a>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('../layout/plugin') -%> <%- include('../layout/scripts') -%>
</body>

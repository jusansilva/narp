<%- include('../layout/header') -%>

<body class="g-sidenav-show bg-gray-200">
  <%- include('../layout/menu-left') -%>
  <main
    class="main-content position-relative max-height-vh-100 h-100 border-radius-lg"
  >
    <%- include('../layout/menu-top') -%>
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div
                class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3"
              >
                <div class="col">
                  <h6 class="text-white text-capitalize ps-3">
                    Lista de Alunos
                  </h6>
                </div>
                <div class="col">
                  <div
                    class="text-white text-center me-2 d-flex align-items-right justify-content-center"
                  >
                    <a href="/createClient">
                      <i class="material-icons opacity-10">person_add</i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th
                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                      >
                        Nome
                      </th>
                      <th
                        class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2"
                      >
                        whatsapp
                      </th>
                      <th
                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                      >
                        Status
                      </th>
                      <th
                        class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"
                      >
                        Cadastro
                      </th>
                      <th class="text-secondary opacity-7"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% alunos.forEach(function(al){ %>
                    <tr>
                      <td>
                        <div class="d-flex px-2 py-1">
                          <div>
                            <img
                              src="../assets/img/team-2.jpg"
                              class="avatar avatar-sm me-3 border-radius-lg"
                              alt="user1"
                            />
                          </div>
                          <div
                            class="d-flex flex-column justify-content-center"
                          >
                            <h6 class="mb-0 text-sm"><%= al.User.name %></h6>
                            <p class="text-xs text-secondary mb-0">
                              <%= al.User.email %>
                            </p>
                          </div>
                        </div>
                      </td>
                      <td>
                        <p class="text-xs font-weight-bold mb-0">
                          <%= al.phone %>
                        </p>
                      </td>

                      <% if(al.payment_status==='pendente' ) { %>
                      <td class="align-middle text-center text-sm">
                        <span class="badge badge-sm bg-gradient-warning">
                          <%= al.payment_status %>
                        </span>
                      </td>
                      <% } %> <% if(al.payment_status==='pago' ) { %>
                      <td class="align-middle text-center text-sm">
                        <span class="badge badge-sm bg-gradient-success">
                          <%= al.payment_status %>
                        </span>
                      </td>
                      <% } %> <% if(al.payment_status==='atrasado' ) { %>
                      <td class="align-middle text-center text-sm">
                        <span class="badge badge-sm bg-gradient-danger">
                          <%= al.payment_status %>
                        </span>
                      </td>
                      <% } %>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold">
                          <%= al.create %>
                        </span>
                      </td>
                      <td class="align-middle">
                        <a
                          href="/updateCliente/<%=al.id%>"
                          class="text-secondary font-weight-bold text-xs"
                          data-toggle="tooltip"
                          data-original-title="Edit user"
                        >
                          Edit
                        </a>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%- include('../layout/plugin') -%> <%- include('../layout/scripts') -%>
</body>
